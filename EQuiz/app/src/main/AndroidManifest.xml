    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".teacher_register"></activity>
        <activity android:name=".student_register" />
        <activity android:name=".TestView" />
        <activity android:name=".TeacherMainMenu" />
        <activity
            android:name=".teacher_quizes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseInfo"
            android:label="@string/title_activity_course_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentMenu"
            android:label="@string/title_activity_student_menu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".student" />
        <activity android:name=".teacher" />
        <activity android:name=".CreateClass" />
        <activity android:name=".CreateQuiz" />
    </application>

</manifest>